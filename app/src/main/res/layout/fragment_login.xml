<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.serverus.oom.FragmentLogin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_layout"
        android:layout_above="@+id/login_btn"
        android:layout_alignLeft="@+id/password_layout"
        android:layout_alignStart="@+id/password_layout">

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Please Enter your Username"
            android:layout_marginTop="91dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_layout"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Please enter your password"
            android:layout_marginTop="91dp"
            android:layout_below="@+id/username_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorSecondary"
        android:background="@color/primaryColor"
        android:text="Login"
        android:textAllCaps="false"
        android:id="@+id/login_btn"
        android:layout_below="@+id/password_layout"
        android:layout_marginTop="68dp"
        android:layout_alignRight="@+id/password_layout"
        android:layout_alignEnd="@+id/password_layout"
        android:layout_alignLeft="@+id/password_layout"
        android:layout_alignStart="@+id/password_layout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/textColorSecondary"
        android:background="@color/primaryColor"
        android:text="Register"
        android:id="@+id/register_btn"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn" />
</LinearLayout>
